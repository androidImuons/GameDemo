<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/adminimage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/green_box" />

    <ImageView
        android:id="@+id/userimage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/green_box" />

    <androidx.cardview.widget.CardView
        android:id="@+id/adminLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="2dp"
        android:layout_toRightOf="@id/adminimage"
        android:minWidth="100dp"
        android:minHeight="45dp"
        android:visibility="visible"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amazon_bold"
                android:padding="2dp"
                android:textColor="#34FFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:fontFamily="@font/amazon_bold"
                android:padding="2dp"
                android:text="12:49 PM"
                android:textColor="@color/yellows"
                android:textSize="10sp" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/userLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="2dp"
        android:layout_toStartOf="@id/userimage"
        android:layout_toLeftOf="@id/userimage"
        android:minWidth="100dp"
        android:minHeight="45dp"
        app:cardCornerRadius="5dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/msgsend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amazon_bold"
                android:padding="2dp"
                android:text=""
                android:textColor="@color/yellows"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/timeSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:fontFamily="@font/amazon_bold"
                android:padding="2dp"
                android:text="12:49 PM"
                android:textColor="@color/yellows"
                android:textSize="10sp" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>